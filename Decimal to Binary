import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		System.out.println("Enter the  decimal number");
		int number=scan.nextInt();
		System.out.println("the decimal to binary is "+decimal(number));
	}
	public static String decimal(int number){
	    int rem=0;
	    String binary="";
	   while(number!=0)
	    {
	        rem=number%2;
	        binary=rem+binary;
	        number=number/2;
	    }
	    return binary;
	}
	
}
